<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <in.workarounds.typography.TextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:maxLines="3"
        android:text="Titulo Aviso"
        android:scrollbars="vertical"
        android:id="@+id/titulo_aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font_name="Roboto"
        app:font_variant="Bold"
        android:textSize="30dp"
        android:padding="20dp"
        android:textColor="@color/fbutton_color_sun_flower"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <in.workarounds.typography.TextView
        android:id="@+id/descripcion_aviso"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1000"
        android:scrollbars="vertical"
        android:autoLink="all"
        android:text="@string/lorem"
        android:textColor="@color/finestBlack"
        app:font_name="Roboto"
        app:font_variant="Condensed"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_below="@+id/titulo_aviso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/web_avisos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/internet"
        fab:fab_colorNormal="@color/colorPrimary"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>